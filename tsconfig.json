{
  "exclude": ["node_modules", "build", "scripts", "./dist/"],
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "esnext",
    "declaration": true,
    "strict": true,
    "types": ["node", "jest"],
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    "downlevelIteration": true,
    "allowJs": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
